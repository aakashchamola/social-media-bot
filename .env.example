# Database
MONGO_URI=mongodb://localhost:27017/social-media-bot

# Server
PORT=3000
NODE_ENV=development

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Twitter API v2 Credentials
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Instagram API Credentials
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

# Rate Limiting
TWITTER_RATE_LIMIT_WINDOW=15
TWITTER_RATE_LIMIT_REQUESTS=300
INSTAGRAM_RATE_LIMIT_WINDOW=60
INSTAGRAM_RATE_LIMIT_REQUESTS=100
FACEBOOK_RATE_LIMIT_WINDOW=60
FACEBOOK_RATE_LIMIT_REQUESTS=100

# Cron Job Settings
ENABLE_SCHEDULED_POSTING=true
ENABLE_AUTO_INTERACTIONS=true
ENABLE_TREND_MONITORING=true
ENABLE_DATA_SCRAPING=true

# Analytics
ANALYTICS_RETENTION_DAYS=30
MAX_POSTS_PER_DAY=10
